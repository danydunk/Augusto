<?xml version="1.0" encoding="UTF-8"?>
<pattern xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../xml_schemas/Pattern_schema.xsd" 
	alloy="CRUD_single_window.als">
	<window id="initial" card="one" alloy="Initial">
		<title>.*</title>
		<class>.*</class>
		<modal>any</modal>
		<root>true</root>
		<action_widget id="paw1" card="some" alloy="Clear_trigger">
			<label>.*(new|clear).*</label>
			<class>.*</class>
		</action_widget>
		<action_widget id="paw2" card="some" alloy="Save_trigger">
			<label>.*(record|save).*</label>
			<class>.*</class>
		</action_widget>
		<action_widget id="paw3" card="some" alloy="Remove_trigger">
			<label>.*(delete|remove).*</label>
			<class>.*</class>
		</action_widget>
		<selectable_widget id="psw1" card="one" alloy="">
			<label>.*</label>
			<class>.*</class>
			<size>.*</size>
		</selectable_widget>
	</window>
	<window id="confirmation" card="lone" alloy="Confirm">
		<title>.*</title>
		<class>.*</class>
		<modal>true</modal>
		<root>false</root>
		<action_widget id="paw7" card="one" alloy="Ok">
			<label>.*(confirm|ok|yes).*</label>
			<class>.*</class>
		</action_widget>
		<action_widget id="paw8" card="one" alloy="Cancel">
			<label>.*(cancel|back|no).*</label>
			<class>.*</class>
		</action_widget>
		<input_widget id="piw2" card="none" alloy="">
			<label>.*</label>
			<class>.*</class>
			<text>.*</text>
		</input_widget>
	</window>
	<edge type="dynamic">
		<from>paw1</from>
		<to>confirmation</to>
		<to>initial</to>				
	</edge>
	<edge type="dynamic">
		<from>paw2</from>
		<to>confirmation</to>
		<to>initial</to>				
	</edge>
	<edge type="dynamic">
		<from>paw3</from>
		<to>confirmation</to>
		<to>initial</to>				
	</edge>
</pattern>