<?xml version="1.0" encoding="UTF-8"?>
<pattern xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	alloy="ADD.als">
	<window id="initial" card="one" alloy="Initial">
		<title>.*</title>
		<modal>any</modal>
		<root>true</root>
		<action_widget id="aw1" card="one" alloy="Add">
			<label>.*(add|new|create).*</label>
		</action_widget>
		<action_widget id="aw2" card="one" alloy="Update">
			<label>.*(edit|update|modify).*</label>
		</action_widget>
		<action_widget id="aw3" card="one" alloy="Delete">
			<label>.*(delete|remove|destroy).*</label>
		</action_widget>
		<selectable_widget id="sw1" card="one" alloy="List">
			<label>.*</label>
			<size>.*</size>
		</selectable_widget>
	</window>
	<window id="form" card="some" alloy="Form">
		<title>.*</title>
		<modal>any</modal>
		<root>false</root>
		<action_widget id="aw4" card="one" alloy="Ok">
			<label>.*(next|ok|save).*</label>
		</action_widget>
		<action_widget id="aw5" card="one" alloy="Cancel">
			<label>.*(back|cancel|back).*</label>
		</action_widget>
		<input_widget id="iw1" card="some" alloy="Input">
			<label>.*</label>
		</input_widget>
	</window>
	<window id="confirmation" card="lone" alloy="Confirm">
		<title>.*</title>
		<modal>true</modal>
		<root>false</root>
		<action_widget id="aw6" card="one" alloy="Ok">
			<label>.*(confirm|ok).*</label>
		</action_widget>
		<action_widget id="aw7" card="one" alloy="Cancel">
			<label>.*(cancel|back).*</label>
		</action_widget>
		<input_widget id="iw2" card="none" alloy="">
			<label>.*</label>
		</input_widget>
	</window>
	<edge>
		<from>aw1</from>
		<to>form</to>
	</edge>
	<edge>
		<from>aw3</from>
		<to>initial</to>
	</edge>
	<edge static_discovery="false">
		<from>aw4</from>
		<to>form</to>
		<to>confirmation</to>
	</edge>
	<edge static_discovery="false">
		<from>aw5</from>
		<to>form</to>
	</edge>
	<edge static_discovery="false">
		<from>aw2</from>
		<to>form</to>
	</edge>
	<edge static_discovery="false">
		<from>aw2</from>
		<to>initial</to>
	</edge>
	<edge static_discovery="false">
		<from>aw6</from>
		<to>initial</to>
	</edge>
	<edge static_discovery="false">
		<from>aw7</from>
		<to>form</to>
	</edge>
</pattern>